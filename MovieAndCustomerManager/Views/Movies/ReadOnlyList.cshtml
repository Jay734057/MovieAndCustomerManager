@model List<MovieAndCustomerManager.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h1>Movies</h1>

<table id="movies" class="table table-hover table-condensed table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}